{

    "editor.inlineSuggest.enabled": true,
    "editor.fontFamily": "JetBrainsMonoNL Nerd Font",
    "editor.fontSize": 18,
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "explorer.compactFolders": false,
    "editor.minimap.enabled": false,
    "editor.lineNumbers": "relative",

    "terminal.integrated.fontSize": 17,
    "terminal.integrated.inheritEnv": false,
    "files.autoSave": "onWindowChange",

    // "workbench.list.keyboardNavigation": "simple",

    "workbench.list.automaticKeyboardNavigation": false,

    "vim.incsearch": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": " ",
    "vim.smartRelativeLine": true,
    "vim.useSystemClipboard": true,
    "vim.highlightedyank.enable": true,
    "vim.camelCaseMotion.enable": true,
    "vim.autoSwitchInputMethod.enable": true,
    "vim.autoSwitchInputMethod.defaultIM": "1033",
    "vim.autoSwitchInputMethod.obtainIMCmd": "D:\\lawrence\\im-select.exe",
    "vim.autoSwitchInputMethod.switchIMCmd": "D:\\lawrence\\im-select.exe {im}",

    "vim.normalModeKeyBindings": [
        {
            "before": [
                "\\"
            ],
            "commands": [
                ":dd"
            ]
        },
        {
            "before": [
                "<tab>"
            ],
            "commands": [
                ":bnext"
            ]
        },
        {
            "before": [
                "<s-tab>"
            ],
            "commands": [
                ":bprevious"
            ]
        },
        {
            "before": [
                "<leader>",
                "h"
            ],
            "commands": [
                ":nohl"
            ]
        },
        {
            "before": [
                "S"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.save",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "Q"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.closeActiveEditor",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "e"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.toggleSidebarVisibility",
                    "args": []
                }
            ]
        },
        {
            "before": "Ctrl+\\",
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.terminal.toggleTerminal",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "g",
                "r"
            ],
            "commands": [
                "editor.action.referenceSearch.trigger"
            ]
        },
        {
            "before": [
                "Y"
            ],
            "after": [
                "y",
                "$"
            ]
        },
        {
            "before": [
                "H"
            ],
            "after": [
                "^"
            ]
        },
        {
            "before": [
                "L"
            ],
            "after": [
                "$"
            ]
        },
        {
            "before": [
                "`b"
            ],
            "after": [
                ":vs"
            ]
        },
        {
            "before": [
                "u"
            ],
            "commands": [
                {
                    "command": "undo"
                }
            ]
        },
        {
            "before": [
                "<C-r>"
            ],
            "commands": [
                {
                    "command": "redo"
                }
            ]
        }
    ],

    "vim.insertModeKeyBindings": [
        {
            "before": [
                "<C-b>"
            ],
            "commands": [
                "cursorLeft"
            ]
        },
        {
            "before": [
                "<c-f>"
            ],
            "commands": [
                "cursorRight"
            ]
        },
        {
            "before": [],
            "commands": [
                "cursorEnd"
            ]
        },
        {
            "before": [
                "<C-a>"
            ],
            "commands": [
                "cursorHome"
            ]
        },
        {
            "before": [
                ";"
            ],
            "after": [
                "<Esc>"
            ]
        },
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        },
        {
            "before": [
                "j",
                "k"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],

    "vim.visualModeKeyBindings": [
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
        {
            "before": [
                "p"
            ],
            "after": [
                "p",
                "g",
                "v",
                "y"
            ]
        },
        {
            "before": [
                "H"
            ],
            "after": [
                "^"
            ]
        },
        {
            "before": [
                "L"
            ],
            "after": [
                "$"
            ]
        }
    ],
    "files.defaultLanguage": "",
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "security.allowedUNCHosts": [
        "192.168.1.222"
    ],
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.editorAssociations": {
        "*.docx": "default"
    },
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "editor.largeFileOptimizations": false,
    "Lingma.cloudModelAutoTriggerGenerateLength": "medium",
    "debug.console.fontSize": 15,
    "git.openRepositoryInParentFolders": "never",
    "workbench.colorTheme": "Deepdark Material Theme | Full Black Version"
}